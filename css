button:hover {
    /* background: #cecece;
    transition-duration: 1s; */
    background-position: 0;

    /*TRANSITION*/
    transition-property: all; /*Св-ва к которым будет применяться*/
    transition-duration: 0.5s; /*Продолжительность перехода*/
    transition-timing-function: ease; /*Стиль перехода 
    ease ease-in ease-out ease-in-out linear 
    steps(int,start|end) 
    cubic-bezier(x1,y1,x2,y2) */
    transition-delay: 0s; /*Задержка перехода*/
    /* transition: all 1s ease 0s; */
}








@keyframes rotate-phone {
    0% {
        transform: rotate(0deg);
    }
    50% {

    }
    100% {
        transform: rotate(1440deg);
    }
}

.class:hover {
    animation-name: rotate-phone;
    animation-duration: 1s; /*Время выполнения*/
    animation-timing-function: linear; /*Тип анимации ease*/
    animation-iteration-count: infinite; /*Количество повторений 1,2,3..., infinite-бесконечно*/
    animation-direction: alternate; /*Запуск обратного движения normal, alternate, alternate-reverse*/
    animation-delay: 3s;/*Задержка*/
    animation-fill-mode: forward;/*В каком положении закончится анимация (none forwards)*/
    
    /*animation-play-state: paused;*/ /*Приостановка при наведении (не учавствует в animation)*/
    /* animation: white-circle 2s linear infinite alternate 0s forwards; */
    transition: .3s;
    transform: scale(-1,1);
    color:#af68ff;
}



.class {
